{
  "config": {
    "interval": 5,
    "workdir": ""
  },
  "agents": [
    {
      "name": "cursor",
      "rules": {
        "pattern": ".cursor/rules/*.mdc"
      },
      "context": {
        "path": ".cursorrules"
      },
      "ignore": {
        "path": ".cursorignore"
      }
    },
    {
      "name": "copilot",
      "rules": {
        "pattern": ".github/instructions/*.instruction.md"
      },
      "context": {
        "path": ".github/copilot-instructions.md"
      }
    },
    {
      "name": "cline",
      "rules": {
        "pattern": ".clinerules/*.md"
      }
    },
    {
      "name": "claude",
      "context": {
        "path": "CLAUDE.md"
      }
    },
    {
      "name": "junie",
      "context": {
        "path": ".junie/guidelines.md"
      },
      "ignore": {
        "path": ".aiignore"
      }
    },
    {
      "name": "codex",
      "context": {
        "path": "AGENTS.md"
      }
    }
  ]
}
